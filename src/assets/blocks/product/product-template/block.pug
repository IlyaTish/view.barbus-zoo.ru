      h1.product-template__title Золотая рыбка
      a.share
        span Поделиться
        i.icon.share-icon

    .product-template__row.product-template__row--product
      .swiper-container.product-gallery
        .swiper-wrapper
          .swiper-slide
            a.product-gallery__img-cont(data-fslightbox href='assets/images/products/product-img-04.jpg')
              img.product-gallery__img(src='assets/images/products/product-img-04.jpg')
          .swiper-slide
            a.product-gallery__img-cont(data-fslightbox href='assets/images/products/product-img-01.jpg')
              img.product-gallery__img(src='assets/images/products/product-img-01.jpg')
