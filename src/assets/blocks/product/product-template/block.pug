        .swiper-pagination

        .swiper-container.product-gallery-thumbs
          .swiper-wrapper
            .swiper-slide
              img.product-gallery-thumbs__img(src='assets/images/products/product-img-04.jpg')
            .swiper-slide
              img.product-gallery-thumbs__img(src='assets/images/products/product-img-01.jpg')
            .swiper-slide
              img.product-gallery-thumbs__img(src='assets/images/products/product-img-03.jpg')


      .product-template__info
        .product-template__row.product-template__row--price
          span.product__price 100000
          .quantity-block
            button.quantity-arrow.quantity-arrow-minus
            input.product__amount.quantity-num(type='number' value='1' min='1' max='2000')
            button.quantity-arrow.quantity-arrow-plus
          button.btn.product-template__btn
            i.icon.cart-icon
            span Добавить

