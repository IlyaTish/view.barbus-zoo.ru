extends template.pug

block content
  //- Include Header block ('.header')
  include /common-blocks/header/block.pug


  - var page = 'service-page'
  div(class='content '+ page +'')
    //- Breadcrumb block ('.breadcrumb') data
    -
      const links = {
        data: [{
          text: 'Главная',
          href: '#',
          active: true
        },
        {
          text: 'Услуги',
          href: '#',
          active: true
        },
        {
          text: 'Чистка аквариумов',
          href: '#'
        }]
      }

    //- Include Breadcrumb block ('.breadcrumb')
    include /common-blocks/breadcrumb/block.pug
    +breadcrumb(links)


    //- Include Modal-gallery block ('.modal-gallery')
    include /common-blocks/modal-gallery/block.pug
    +modal-gallery(
      'Чистка аквариумов',
      'assets/images/modal-gallery-img-04.jpg',
      'assets/images/modal-gallery/modal-gallery-img-05.jpg',
      'assets/images/modal-gallery/modal-gallery-img-06.jpg'
    )


    //- Include Description block ('.service__desc')
    include /service/desc/block.pug


  //- Include Popup block ('.popup')
  include /common-blocks/popup/block.pug

  //- Include Footer block ('.footer')
  include /common-blocks/footer/block.pug
